{
  "preset": "ts-jest",
  "testTimeout": 60000,
  "moduleFileExtensions": [
    "ts",
    "js",
    "json",
    "jsonld"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "packages/**/src/**/*.ts",
    "!**/examples/**",
    "!packages/cli/**",
    "!**/types/**",
    "!**/dist/**",
    "!**/node_modules/**",
    "!**/packages/**/index.ts"
  ],
  "coveragePathIgnorePatterns": [
    "packages/bc-wallet-showcase-openapi"
  ],
  "coverageReporters": [
    "text",
    "lcov",
    "json"
  ],
  "coverageDirectory": "./coverage",
  "transform": {
    "\\.jsx?$": "babel-jest",
    "\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "./packages/tsconfig-base.json"
      }
    ]
  },
  "testMatch": [
    "**/__tests__/**/*.test.*",
    "!dist/*"
  ],
  "testEnvironment": "node",
  "automock": false,
  "verbose": true
}
