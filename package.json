{
  "name": "bc-wallet-demo",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "description": "BC Wallet - Verifiable Credential Demo",
  "repository": {
    "url": "https://github.com/bcgov/bc-wallet-demo",
    "type": "git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check-types": "tsc --noEmit",
    "prettier": "prettier \"./apps/**/*.{js,json,ts,md,yml,yaml}\" --ignore-path .gitignore --ignore-path .prettierignore",
    "lint": "eslint .",
    "format": "pnpm prettier --write",
    "prepare": "husky install",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "preinstall": "npx only-allow pnpm",
    "generate:models": "pnpm -r --if-present --stream run generate:models && pnpm --filter bc-wallet-openapi --filter bc-wallet-traction-openapi run build:clean",
    "build:clean": "pnpm -r --if-present --stream run build:clean",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose --config=jest.json --coverage=true --detectOpenHandles",
    "test:ci": "jest --config=jest.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      }
    ]
  },
  "devDependencies": {
    "@t3-oss/env-nextjs": "^0.12.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cypress": "^9.5.1",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-cypress": "^4.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-import-helpers": "^2.0.1",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "turbo": "latest",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">= 20.0.0 < 22"
  },
  "packageManager": "pnpm@9.12.3",
  "resolutions": {
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.0"
  },
  "author": "4Sure"
}
