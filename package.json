{
  "name": "bc-wallet-demo",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "description": "BC Wallet - Verifiable Credential Demo",
  "repository": {
    "url": "https://github.com/bcgov/bc-wallet-demo",
    "type": "git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check-types": "tsc --noEmit",
    "prettier": "prettier \"**/*.{js,json,ts,md,yml,yaml}\" --ignore-path .gitignore --ignore-pattern \"apps/*/src/showcase-api/**\"",
    "lint": "eslint --ignore-path .gitignore .",
    "format": "yarn prettier --write",
    "prepare": "husky install",
    "dev": "turbo run dev",
    "test": "yarn run cypress open",
    "build": "turbo run build",
    "cy:open": "cypress open",
    "cy:run": "cypress run"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cypress": "^9.5.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-import-helpers": "^2.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.1",
    "prettier": "^2.6.1",
    "rimraf": "^6.0.1",
    "turbo": "^2.4.4"
  },
  "packageManager": "yarn@1.22.22"
}
