# application settings
PORT=3001

# The database connection can be established using a database url or using separate params
DB_URL="postgresql://postgres:your-super-secret-and-long-postgres-password@localhost:5432/postgres"
DB_NAME=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-super-secret-and-long-postgres-password

# cors settings
CORS_DISABLED=false
ALLOW_ORIGINS=https://bcshowcase-ui.dev.nborbit.ca,http://localhost:3000
ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With,Cache-Control,Pragma,Expires
ALLOW_CREDENTIALS=true

# authentication & authorization
REALM=YOUR_REALM
AUTH_SERVER_URL=YOUR_AUTH_SERVER_BASE_URL
CLIENT_ID=YOUR_CLIENT_ID
CLIENT_SECRET=YOUR_CLIENT_SECRET

# Traction message broker settings
AMQ_HOST=localhost
AMQ_TRANSPORT=tcp # tls for non-local instances
ENCRYPTION_KEY=TS9PmByXiBMmAUFSNubUzMiWWJmMCjWa2DGwgFnCaas  # for production instances create a new one using the generate-key script. The key should match between bc-wallet-traction-adapter and bc-wallet-api-server
NONCE_SIZE=12
MODE=multitenant